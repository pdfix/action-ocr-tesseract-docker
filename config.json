        },
        {
          "name": "Output PDF",
          "desc": "Output PDF file.",
          "flags": 4,
          "ext": "pdf",
          "type": "file_path_save",
          "value": "user-defined file path"
        },
        {
          "name": "Language",
          "desc": "Language used for recognition",
          "type": "string",
          "value": "en-us"
        },
        {
          "name": "License Name",
          "desc": "License name.",
          "type": "string",
          "value": ""
        },
        {

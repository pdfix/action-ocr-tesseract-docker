        },
        {
          "args": [
            "build",
            "--input",
            "${Input PDF}",
            "--output",
            "${Output PDF}",
            "--lang",
            "${Language}"
          ],
          "name": "OCR with forced build of docker image with language",
          "desc": "OCR with forced build of docker image with language"
        },
        {
          "args": [
            "build",
            "--input",
            "${Input PDF}",
            "--output",
            "${Output PDF}",
            "--lang",
            "${Language}",
            "--name",
            "${License Name}",
            "--key",
            "${License Key}"
          ],
          "name": "OCR with forced build of docker image with language and license",
          "desc": "OCR with forced build of docker image with language and license"
        }
      ],
      "configuration": {
        "args": [
            "--input",
            "${Input PDF}",
            "--output",
            "${Output PDF}",
            "--lang",
            "${Language}",
            "--name",
            "${License Name}",
            "--key",
            "${License Key}"
          ],
          "name": "OCR without forced build of docker image with language and license",
          "desc": "OCR without forced build of docker image with language and license"

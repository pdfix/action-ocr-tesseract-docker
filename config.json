{
  "name": "Pipeline OCR Tesseract",
  "desc": "Pipeline running OCR Tesseract action.",
  "version": {
    "major": 1,
    "minor": 0
  },
  "pipeline": [
    {
      "name": "OCR Tesseract",
      "desc": "Optical content recognition of given PDF document.",
      "path": "user-defined command folder",
      "category": "Accessibility",
      "program": "run.sh",
      "stdout": "",
      "stderr": "",
      "returnCodes" : [0],
      "configurations": [
        {
          "args": [
            "--input",
            "${Input PDF}",
            "--output",
            "${Output PDF}"
          ],
          "name": "OCR without forced build of docker image",
          "desc": "OCR without forced build of docker image"
        },
        {
          "args": [
            "--input",
            "${Input PDF}",
            "--output",
            "${Output PDF}",
            "--lang",
            "${Language}"
          ],
          "name": "OCR without forced build of docker image with language",
          "desc": "OCR without forced build of docker image with language"
        },
        {
          "args": [
            "--input",
            "${Input PDF}",
            "--output",
            "${Output PDF}",
            "--lang",
            "${Language}",
            "--name",
            "${License Name}",

{
  "name": "OCR Tesseract",
  "desc": "Action running OCR Tesseract.",
  "version": {
    "major": 1,
    "minor": 0
  },
  "actions": [
    {
      "name": "OCR Tesseract",
      "desc": "Optical content recognition of given PDF document.",
      "path": "user-defined command folder",
      "category": "Accessibility",
      "program": "docker run -v ${WORKING_DIRECTORY}:/data -w /data --rm pdfix/lang-detect:latest -i /data/${CURRENT_INPUT_NAME} -o /data/${CURRENT_OUTPUT_NAME} --name ${LICENSE_NAME} --key ${LICENSE_KEY}",
      "stdout": "",
      "stderr": "",
      "returnCodes" : [0],
      "configurations": [
        {
          "args": [
            "--input",
            "${Input PDF}",
            "--output",
            "${Output PDF}",
            "--lang",
            "${Language}"
          ],
          "name": "OCR without forced build of docker image with language",
          "desc": "OCR without forced build of docker image with language"
        }
      ],
      "configuration": {
        "args": [
            "--input",
            "${Input PDF}",
            "--output",
            "${Output PDF}",
            "--lang",
            "${Language}"
          ],
          "name": "OCR document",
          "desc": "OCR document"
      },
      "args": [
        {
          "name": "Input PDF",
          "desc": "Input PDF file",
          "flags": 2,
          "ext": "pdf",
          "type": "file_path",
          "value": "user-defined file path"
        },
        {
          "name": "Output PDF",
          "desc": "Output PDF file.",
          "flags": 4,
          "ext": "pdf",
          "type": "file_path_save",
          "value": "user-defined file path"
        },
        {
          "name": "Language",
          "desc": "Language used for recognition",
          "type": "string",
          "value": "en-us"
        }
      ]
    }
  ]
}